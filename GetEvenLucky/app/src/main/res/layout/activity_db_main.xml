<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/main"
    android:background="@color/black"
    android:padding="16dp">

    <!-- Title for the Challenge -->
    <TextView
        android:id="@+id/title_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Android Database CTF Challenge"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:layout_marginTop="20dp"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"/>

    <!-- TextView providing instructions about the database -->
    <TextView
        android:id="@+id/db_info_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SQLite databases in Android often store important data. Explore the database for hidden encoded information."
        android:textColor="@color/white"
        android:textSize="16sp"
        android:padding="10dp"
        android:layout_below="@id/title_text_view"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"/>

    <!-- Hint about where to look for the encoded flag -->
    <TextView
        android:id="@+id/hint_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hint: The database contains Base64 encoded information. Investigate the app storage."
        android:textSize="14sp"
        android:textColor="@color/white"
        android:padding="10dp"
        android:layout_below="@id/db_info_text_view"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"/>

</RelativeLayout>